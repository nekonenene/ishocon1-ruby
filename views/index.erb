<div class="jumbotron">
  <div class="container">
    <h1>今日は大安売りの日です！</h1>
  </div>
</div>
<div class="container">
  <div class="row">
    <% product_ids.each do |product_id| %>
      <% product_and_comments = products.select { |product| product[:id] == product_id } %>
      <% product = product_and_comments.first %>
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <a href="/products/<%= product[:id] %>"><%= product[:name] %></a>
          </div>
          <div class="panel-body">
            <a href="/products/<%= product[:id] %>"><img src="<%= product[:image_path] %>" class="img-responsive" /></a>
            <h4>価格</h4>
            <p><%= product[:price] %>円</p>
            <h4>商品説明</h4>
            <p><%= product[:description][0..69] %>…</p>
            <% five_comments = product_and_comments.slice(0, 5) %>
            <% comments_count = product_and_comments.length %>
            <h4><%= comments_count %>件のレビュー</h4>
            <ul>
              <% five_comments.each do |comment| %>
                <li><%= comment[:comment_content].size > 25 ? "#{comment[:comment_content][0..24]}…" : comment[:comment_content] %> by <%= comment[:comment_user_name] %></li>
              <% end %>
            </ul>
          </div>
          <% if current_user %>
            <div class="panel-footer">
              <form method="POST" action="/products/buy/<%= product[:id] %>">
                <fieldset>
                  <input class="btn btn-success btn-block" type="submit" name="buy" value="購入" />
                </fieldset>
              </form>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
